{% extends 'templates/app.twig' %}


{% block content%}
<div class="row">
     <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
       <div class="card card-signin my-5">
         <div class="card-body">
           <h5 class="card-title text-center">Sign In</h5>
           <form action="{{ path_for('auth.signup') }}" method="post">
             <div class="form-group">
               <label for="email">Email</label>
               <input type="email" name="email" id="email" placeholder="you@domain.com" class="form-control">
             </div>

             <div class="form-group">
               <label for="name">Name</label>
               <input type="text" name="name" id="name" class="form-control">
             </div>

             <div class="form-group">
               <label for="password">Password</label>
               <input type="password" password="password" id="password" class="form-control">
             </div>

             <button type="submit" class="btn btn-primary btn-block">Sing Up </button>
           </form>
         </div>
       </div>
     </div>
   </div>
{% endblock%}
